# SmartMove Backend Environment Variables
# Copy this file to .env and fill in the values

# Application Secret Key (generate a strong random string)
SECRET_KEY=your-super-secret-key-here-change-this

# Database URL (use PostgreSQL for production, SQLite for development)
# Example: postgresql://user:password@localhost/smartmove
# Default: sqlite:///app.db (for local development)
DATABASE_URL=

# Redis URL (required for Celery task queue)
# Example: redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/0

# Celery Configuration (optional, will use REDIS_URL if not set)
CELERY_BROKER_URL=
CELERY_RESULT_BACKEND=

# MPESA Configuration (get these from Safaricom Developer Portal)
# https://developer.safaricom.co.ke/
MPESA_BASE_URL=https://sandbox.safaricom.co.ke/mpesa/
MPESACONSUMER_KEY=your-mpesa-consumer-key
MPESA_CONSUMER_SECRET=your-mpesa-consumer-secret
MPESA_SHORTCODE=your-mpesa-shortcode
MPESA_PASSKEY=your-mpesa-passkey
CALLBACK_URL=http://localhost:5001/api/payments/callback

